<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="moon_world">
    
    <!-- Physics with moon gravity (1.62 m/sÂ²) -->
    <physics type="ode">
      <gravity>0 0 -1.62</gravity>
      <max_step_size>0.001</max_step_size>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Dark sky scene settings -->
    <scene>
      <ambient>0.1 0.1 0.15 1.0</ambient>
      <background>0.0 0.0 0.02 1.0</background>
      <shadows>true</shadows>
    </scene>

    <!-- Sun light (distant, harsh) -->
    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 50 0 0 0</pose>
      <diffuse>1.0 1.0 0.95 1</diffuse>
      <specular>0.5 0.5 0.5 1</specular>
      <direction>0.3 0.2 -1</direction>
    </light>

    <!-- Dim ambient starlight -->
    <light name="starlight" type="point">
      <pose>0 0 100 0 0 0</pose>
      <diffuse>0.05 0.05 0.1 1</diffuse>
      <specular>0.0 0.0 0.0 1</specular>
      <attenuation>
        <range>200</range>
        <constant>1</constant>
        <linear>0</linear>
        <quadratic>0</quadratic>
      </attenuation>
    </light>

    <!-- Moon ground plane -->
    <model name="moon_ground">
      <static>true</static>
      <link name="ground_link">
        <collision name="ground_collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0.8</mu>
                <mu2>0.8</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="ground_visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.35 1</ambient>
            <diffuse>0.4 0.4 0.45 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Crater 1 (large) -->
    <model name="crater_1">
      <static>true</static>
      <pose>5 3 0.1 0 0 0</pose>
      <link name="crater_link">
        <collision name="crater_collision">
          <geometry>
            <cylinder>
              <radius>2.0</radius>
              <length>0.2</length>
